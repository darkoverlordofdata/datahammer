<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="tvalue" parent="title">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="label" parent="item">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="value" parent="item">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="files" parent="item">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fillViewport">true</item>
    </style>


    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/Sienna</item>
        <item name="android:bottomDark">@color/Sienna</item>
        <item name="android:bottomMedium">@color/Sienna</item>
        <item name="android:centerBright">@color/Sienna</item>
        <item name="android:centerDark">@color/Sienna</item>
        <item name="android:centerMedium">@color/Sienna</item>
        <item name="android:fullBright">@color/Sienna</item>
        <item name="android:fullDark">@color/Sienna</item>
        <item name="android:topBright">@color/Sienna</item>
        <item name="android:topDark">@color/Sienna</item>
    </style>

    <style name="MalleusDialog" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/Cornsilk</item>
    </style>

</resources>
