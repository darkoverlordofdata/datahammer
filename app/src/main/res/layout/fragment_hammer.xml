<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HammerActivity$HammerFragment">

    <TextView
        android:id="@+id/label_stats"
        android:text="@string/title_stats"
        style="@style/title"/>

    <TextView
        android:text="@string/label_total_memory"
        android:id="@+id/total_memory"
        android:layout_below="@+id/label_stats"
        style="@style/label"/>

    <TextView
        android:id="@+id/total_value"
        android:layout_below="@+id/label_stats"
        style="@style/value"/>

    <TextView
        android:text="@string/label_free_memory"
        android:id="@+id/free_memory"
        android:layout_below="@+id/total_memory"
        style="@style/label"/>

    <TextView
        android:id="@+id/free_value"
        android:layout_below="@+id/total_memory"
        style="@style/value"/>

    <TextView
        android:text="@string/label_busy_memory"
        android:id="@+id/busy_memory"
        android:layout_below="@+id/free_memory"
        style="@style/label"/>

    <TextView
        android:id="@+id/busy_value"
        android:layout_below="@+id/free_memory"
        style="@style/value"/>

    <TextView
        android:text="@string/label_ext_storage"
        android:id="@+id/ext_storage"
        android:layout_below="@+id/busy_memory"
        style="@style/label"/>

    <TextView
        android:id="@+id/ext_value"
        android:layout_below="@+id/busy_value"
        style="@style/value"/>

    <TextView
        android:id="@+id/label_files"
        android:layout_below="@+id/ext_value"
        android:text="@string/title_files"
        style="@style/title"/>

    <ScrollView
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:fillViewport="true">
        <TextView
            android:id="@+id/files_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </ScrollView>


</RelativeLayout>
