<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/NavajoWhite"
    tools:context=".HammerActivity$HammerFragment">

    <!-- ======================== -->
    <!-- Root Directory Stats     -->
    <!-- ======================== -->
    <TextView
        android:id="@+id/root_title"
        android:text="@string/root_title"
        style="@style/title"/>

    <TextView
        android:id="@+id/root_total_value"
        style="@style/tvalue"/>

    <!-- Used Memory -->
    <TextView
        android:id="@+id/root_used_label"
        android:text="@string/used_mem"
        android:layout_below="@+id/root_title"
        style="@style/label"/>

    <TextView
        android:id="@+id/root_used_value"
        android:layout_below="@+id/root_title"
        style="@style/value"/>

    <!-- Free Memory -->
    <TextView
        android:id="@+id/root_free_label"
        android:text="@string/free_mem"
        android:layout_below="@+id/root_used_label"
        style="@style/label"/>

    <TextView
        android:id="@+id/root_free_value"
        android:layout_below="@+id/root_used_label"
        style="@style/value"/>

    <!-- ======================== -->
    <!-- External Directory Stats -->
    <!-- ======================== -->
    <TextView
        android:id="@+id/ext_title"
        android:text="@string/ext_title"
        android:layout_below="@+id/root_free_label"
        style="@style/title"/>

    <TextView
        android:id="@+id/ext_total_value"
        android:layout_below="@+id/root_free_label"
        style="@style/tvalue"/>

    <!-- Used Memory -->
    <TextView
        android:id="@+id/ext_used_label"
        android:text="@string/used_mem"
        android:layout_below="@+id/ext_title"
        style="@style/label"/>

    <TextView
        android:id="@+id/ext_used_value"
        android:layout_below="@+id/ext_title"
        style="@style/value"/>

    <!-- Free Memory -->
    <TextView
        android:id="@+id/ext_free_label"
        android:text="@string/free_mem"
        android:layout_below="@+id/ext_used_label"
        style="@style/label"/>

    <TextView
        android:id="@+id/ext_free_value"
        android:layout_below="@+id/ext_used_label"
        style="@style/value"/>

    <!-- Start Writing -->
    <Button
        android:id="@+id/button"
        android:text="@string/start"
        android:layout_below="@+id/ext_free_value"
        android:onClick="hammerTime"
        android:background="@drawable/roundedbutton"
        android:textStyle="bold"
        android:textColor="@color/Cornsilk"
        style="@style/value"/>


    <!-- Status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_value"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ext_title"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/ext_free_label" />

</RelativeLayout>
